<div class="login-form">
  <%= form_for :session, url: login_path, class: "form-horizontal" do |f| %>
    <div class="col-md-offset-1">
      <h1 class="text-center">Login</h1>
    </div>
    <div class="col-md-offset-3">
      <div class="form-group col-xs-8">
        <label class="control-label col-sm-3" for="email"><%= t("signup.email") %>:</label>
        <div class="col-sm-8">
          <%= f.text_field :email, class: "form-control" %>
        </div>
      </div>
      <div class="form-group col-xs-8">
        <label class="control-label col-sm-3" for="pwd"><%= t("signup.password") %>:</label>
        <div class="col-sm-8">
          <%= f.password_field :password, class: "form-control" %>
        </div>
      </div>
      <div class="form-group col-xs-8">
        <label class="control-label col-sm-3" for="pwd"></label>
        <div class="col-sm-8">
          <%= f.check_box :remember_me %>
          <span>
            <%= t "login.remember_password" %>|
            <%= link_to "Signup now?", new_user_path%>
            </span>
        </div>
      </div>

      <div class="form-group col-xs-8">
        <div class="col-sm-offset-3 col-sm-10">
          <%= f.submit t("login.login"), class: "btn btn-default" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

