<%= form_for @user, class: "form-horizontal" do |f| %>
  <%= render "shared/error_messages" %>
  <div class="col-md-offset-3">
    <div class="form-group col-xs-8">
      <label class="control-label col-sm-3" for="email"><%= t("signup.user_name") %>:</label>
      <div class="col-sm-6">
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>

    <div class="form-group col-xs-8">
      <label class="control-label col-sm-3" for="email"><%= t("signup.email") %>:</label>
      <div class="col-sm-6">
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>

    <div class="form-group col-xs-8">
      <label class="control-label col-sm-3" for="pwd"><%= t("signup.password") %>:</label>
      <div class="col-sm-6">
        <%= f.password_field :password, class: "form-control" %>
      </div>
    </div>

    <div class="form-group col-xs-8">
      <label class="control-label col-sm-3" for="pwd"><%= t("signup.password_confir") %>:</label>
      <div class="col-sm-6">
        <%= f.password_field :password_confirmation, class: "form-control" %>
      </div>
    </div>

    <div class="form-group col-xs-8">
      <div class="col-sm-offset-3 col-sm-10">
        <%= f.submit t("signup.signup"), class: "btn btn-default" %>
      </div>
    </div>

  </div>
<% end %>

